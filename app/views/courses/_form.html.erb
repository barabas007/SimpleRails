<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
    <%= form.text_field :image, placeholder:"Изображение", class: "form-control" %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :video, placeholder:"Видео", class: "form-control" %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :title, placeholder:"Название", class: "form-control" %>
  </div>

  <div class="form-group">
    
    <%= form.number_field :star, placeholder:"Рейтинг", class: "form-control" %>
  </div>

  <div class="field">
    
    <%= form.text_area :description, placeholder:"Описание", length: "600",  class: "form-control" %>
  </div>

  <button type="submit" class="btn btn-primary">Сохранить</button>
  <%= link_to "Открыть все курсы", courses_path, class: "btn btn-secondary" %>  
  
<% end %>
